<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="WpfApplication1.MainWindow"
        Title="TazCalc V 1.2" Height="350" Width="525" mc:Ignorable="d" Background="#FF7AA5CF" ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="525" MinHeight="350" MaxWidth="525" MaxHeight="350">
    <Grid>
        <TextBox x:Name="numberA" HorizontalAlignment="Left" Margin="72,110,0,144" Width="141" TextChanged="textBox1_TextChanged" FontSize="42.667" MaxLines="1" MaxLength="5" AutoWordSelection="True" Padding="8,0" />
        <TextBlock x:Name="resultBlock" Height="78" HorizontalAlignment="Left" VerticalAlignment="Top" Width="509" FontSize="64" d:LayoutOverrides="VerticalAlignment" Foreground="#FF61F438" FontFamily="Tahoma" Padding="15,0" >
        	<TextBlock.Background>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
        			<GradientStop Color="Black" Offset="0"/>
        			<GradientStop Color="#FF343434" Offset="1"/>
        			<GradientStop Color="#FF202020" Offset="0.177"/>
        		</LinearGradientBrush>
        	</TextBlock.Background>
        </TextBlock>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="228,128,0,0" x:Name="operations" VerticalAlignment="Top" Width="55" SelectionChanged="operations_SelectionChanged" />
        <Button Content="=" HorizontalAlignment="Left" Margin="43,0,0,21" x:Name="doit" Width="425" Click="doit_Click" VerticalAlignment="Bottom" Height="94" FontSize="64" Padding="1,0" FontFamily="Segoe UI Light" Foreground="White" ToolTip="Click para obtener resultado" Background="#FFC0DAF2" />
        <TextBox x:Name="numberB" HorizontalAlignment="Right" Margin="0,110,64,144" Width="141" TextChanged="textBox1_TextChanged" FontSize="42.667" Padding="8,0" MaxLength="5" MaxLines="1" AutoWordSelection="True" />
    </Grid>
</Window>
